{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,

    "module": "ESNext",
    "target": "ES2018",

    "noImplicitAny": true,
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "lib": [
      "es2021",
      "dom"
    ],
    "skipLibCheck": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*",
    "index.ts",
    "vite.config.ts"
  ],
  "exclude": [
    "./test",
    "dist",
    "node_modules"
  ]
}
